<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_close"
            android:layout_marginRight="14dp"
            />


        <ImageView
            android:id="@+id/image_dragon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_qr_scan"
            />

        <TextView
            android:id="@+id/text_oops_something_went_wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_dragon"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="Time out"
            android:gravity="center"
            android:layout_marginBottom="14dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/btn_scan_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_oops_something_went_wrong"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/bg_green"
            android:text="Scan Again"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>